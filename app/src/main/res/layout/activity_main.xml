<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"




    tools:context="com.example.rokymielsen.tgwon.MainActivity"
    android:weightSum="1">

    <com.example.rokymielsen.tgwon.MyDraw
        android:id="@+id/myDraw1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout

        android:id="@+id/layoutDaw"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="408dp"
            android:layout_height="113dp"
            android:layout_marginTop="40dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/tgwontitle" />

        <Button
            android:id="@+id/button"
            android:layout_width="233dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="Играть"
            android:onClick="game"/>

        <Button
            android:id="@+id/button2"
            android:layout_width="233dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="7dp"
            android:text="Настройки"
            android:onClick="settings"
            />

        <Button
            android:id="@+id/statusBut"
            android:layout_width="233dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="7dp"
            android:text="Статика"
            android:onClick="status"
            />


    </LinearLayout>

</FrameLayout>
