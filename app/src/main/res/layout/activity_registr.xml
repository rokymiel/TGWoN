<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistrActivity"
    android:background="#969696">

    <TextView
        android:id="@+id/textView42"
        android:layout_width="223dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="61dp"
        android:layout_marginTop="63dp"
        android:text="NickName"
        android:textColor="#04328f"
        android:textSize="30dp" />

    <EditText
        android:id="@+id/nameViewReg"
        android:layout_width="223dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView42"
        android:layout_below="@+id/textView42"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:theme="@style/MyEditText" />

    <TextView
        android:id="@+id/textView62"
        android:layout_width="222dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView42"
        android:layout_marginTop="159dp"
        android:text="MaxSore"
        android:textColor="#04328f"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/scoreViewReg"
        android:layout_width="223dp"
        android:layout_height="38dp"
        android:layout_alignStart="@+id/textView42"
        android:layout_below="@+id/textView62"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <Button
        android:id="@+id/save"
        android:layout_width="226dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textView42"
        android:layout_marginBottom="65dp"
        android:text="Сохранить"
        android:visibility="invisible"
        android:onClick="save"/>
</RelativeLayout>